@model RoleFormViewModel

<form method="post" asp-action="Create">
    <div class="input-group mb-3 row gap-1 container mx-3">
        <input asp-for="Name" class="form-control col-lg-10" placeholder="Role Name" />
        <div class="input-group-append col-lg-2">
            <button type="submit" class="btn btn-success"> Add New Role </button>
        </div>
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>
</form>
