@using Route.Talabat.Dashboard.Models
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<h1 class="m-3">All Roles</h1>
<partial name="_RoleFormPartialView" model="new RoleFormViewModel()" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R => R.Id)</th>
                <th>@Html.DisplayNameFor(R => R.Name)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@role.Id"> <i class="fa-regular fa-eye"></i> Edit</a></td>
                    <td><a class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#Modal-@role.Id" asp-route-id="@role.Id"> <i class="fa-solid fa-trash"></i> Delete</a></td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="Modal-@role.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Confirm</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>You Sure You Want To Delete @role.Name ?</p>
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" asp-route-Id="@role.Id">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h3>There is No Roles Exist</h3>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}