@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}
<h1 class="m-3">All Users</h1>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.UserName)</th>
                <th>@Html.DisplayNameFor(U => U.DisplayName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th>Roles</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.DisplayName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(", ", user.Roles.ToList())</td>
                    <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@user.Id"> <i class="fa-regular fa-eye"></i> Edit</a></td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h3>There is No Users Exist</h3>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}