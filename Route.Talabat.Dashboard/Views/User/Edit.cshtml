@model UserRoleViewModel
@{
    ViewData["Title"] = "Edit";
};
<h1 class="m-3">Edit - @Model.UserName</h1>
<div class="container">
    <form method="post" asp-action="Edit">
        <input asp-for="UserId" class="form-control" hidden />
        <div>
            <label asp-for="UserName" class="col-form-label"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <h3 class="mb-3">Manage User Roles</h3>
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div>
                <input asp-for="@Model.Roles[i].Name" hidden />
                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-label" />
                <label asp-for="@Model.Roles[i]" class="form-check-label">@Model.Roles[i].Name</label>
                <span asp-validation-for="Roles"></span>
            </div>
        }
        <input type="submit" value="Save" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-primary">Back To Users List</a>
    </form>
</div>